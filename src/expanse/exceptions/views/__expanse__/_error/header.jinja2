{% from "__expanse__/_macros.jinja2" import badge %}

<div class="flex flex-col pt-8 sm:pt-16">
  <div class="mb-8 flex flex-col gap-5">
    <h1 class="font-mono text-3xl font-semibold text-stone-600 dark:text-white">
      {{ error.name }}
    </h1>
    <p class="text-xl font-light text-stone-800 dark:text-stone-300">{{ error.message }}</p>
  </div>

  <div class="mb-8 flex items-start gap-2 sm:mb-16">
    <div
      class="flex items-center gap-0.5 divide-x divide-stone-200 rounded-md bg-white shadow-xs ring ring-stone-950/5 dark:divide-white/10 dark:border-white/10 dark:bg-white/3"
    >
      <div class="flex h-6 items-center gap-1.5 px-[6px] font-mono text-[13px]">
        <span class="text-stone-500 dark:text-stone-500">Expanse</span>
        <span class="text-stone-600 dark:text-stone-300">{{ expanse_version }}</span>
      </div>
      <div class="flex h-6 items-center gap-1.5 px-[6px] font-mono text-[13px]">
        <span class="text-stone-500 dark:text-stone-400">Python</span>
        <span class="text-stone-600 dark:text-stone-300">{{ python_version }}</span>
      </div>
    </div>
  </div>
</div>
